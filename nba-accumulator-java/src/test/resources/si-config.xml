	<int:transformer input-channel="transformerChannel" output-channel="outboundChannel" ref="messageTransformer" />
	<bean id="gameRepository" class="com.rossotti.basketball.app.gateway.MessageTransformer" /> -->

	<int:channel id="outboundChannel" />

	<int-file:outbound-channel-adapter channel="outboundChannel" id="consumer-file-adapter" directory="file:////home/pablote/pdrive/pwork/rest/nba-accumulator/message/outbound" />

	<int:poller id="defaultPoller" default="true" max-messages-per-poll="5" fixed-rate="200" />
</beans>